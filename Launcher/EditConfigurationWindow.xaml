<Window x:Class="Launcher.EditConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Configuration" Height="300" Width="269" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}">
	<Grid Margin="0,0,2,0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="62"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<ComboBox x:Name="IWADComboBox" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="177" Height="22" ToolTip="Select IWAD here."/>
		<Label Content="IWAD" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="42" Height="26"/>
		<ListBox x:Name="WadSelectionList" Grid.Column="1" HorizontalAlignment="Left" Height="223" Margin="10,37,0,0" VerticalAlignment="Top" Width="176" ToolTip="Select extra wads here."/>
		<Label Content="Wads" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
		<Button Content="Cancel" HorizontalAlignment="Left" Margin="10,238,0,0" VerticalAlignment="Top" Width="42" ToolTip="Discard configuration and close the window."/>
		<Button Content="OK" HorizontalAlignment="Left" Margin="10,211,0,0" VerticalAlignment="Top" Width="42" ToolTip="Save configuration and close the window."/>

	</Grid>
</Window>
