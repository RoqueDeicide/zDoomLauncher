<Window x:Class="Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="374.187" Width="318.699" Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}">
	<Grid Margin="0,0,2,0">
		<GroupBox Header="Configurations" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="324" Width="192" FontSize="14">
			<ListBox Margin="0,10,-2,4" ToolTip="A list of zDoom launch configurations." SelectionChanged="SwitchToDifferentConfiguration"/>
		</GroupBox>
		<Button Content="Add" HorizontalAlignment="Left" Margin="225,44,0,0" VerticalAlignment="Top" Width="75" ToolTip="Add new launch configuration." Click="CreateNewConfiguration"/>
		<Button Content="Edit" HorizontalAlignment="Left" Margin="225,71,0,0" VerticalAlignment="Top" Width="75" ToolTip="Edit existing configuration." Click="EditConfiguration"/>
		<Button Content="Remove" HorizontalAlignment="Left" Margin="225,98,0,0" VerticalAlignment="Top" Width="75" ToolTip="Remove existing configuration." Click="RemoveConfiguration"/>
		<Button Content="Launch" HorizontalAlignment="Left" Margin="224,125,0,0" VerticalAlignment="Top" Width="75" Click="LaunchTheGame" ToolTip="Launches currently selected configuration."/>

	</Grid>
</Window>
